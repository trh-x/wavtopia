generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  role      Role     @default(USER)
  tracks    Track[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Track {
  id            String    @id @default(cuid())
  title         String
  artist        String
  originalFormat String
  originalUrl   String
  fullTrackUrl  String    // URL to the full track WAV file
  coverArt      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  components    Component[]
  metadata      Json?
  userId        String
  user          User      @relation(fields: [userId], references: [id])
}

model Component {
  id        String   @id @default(cuid())
  name      String
  wavUrl    String
  type      String
  trackId   String
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
} 