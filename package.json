{
  "name": "wavtopia",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:frontend": "pnpm --filter @wavtopia/frontend dev",
    "dev:backend": "pnpm --filter @wavtopia/backend dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "db:setup": "cd packages/core-storage && pnpm prisma migrate dev && pnpm prisma generate"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
